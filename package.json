{
  "name": "fmh-style",
  "version": "0.0.4",
  "description": "FMH SCSS styles",
  "main": "index.js",
  "repository": "https://github.com/fmh-finanzberatung/fmh-style.git",
  "author": "FMH-Finanzberatung <info@fmh.de>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:css && yarn build:kss",
    "build:css": "rimraf dist/* && node-sass src -o dist",
    "build:kss": "yarn build:css && kss --config kss-config.json",
    "dev": "node server.js",
    "watch:scss": "yarn build:css && node-sass src/ -wor dist"
  },
  "optionalDependencies": {
    "@babel/core": "^7.10.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0"
  },
  "devDependencies": {
    "express": "^4.17.1",
    "kss": "^3.0.1",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.1",
    "rimraf": "^3.0.0",
    "typeface-roboto": "^0.0.54"
  }
}
